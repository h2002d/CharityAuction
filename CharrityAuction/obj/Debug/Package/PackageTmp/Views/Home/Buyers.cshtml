@model List<CharrityAuction.Models.Payment>
@{
    ViewBag.Title = "Buyers";
}
<h2 style="color:#0094ff;margin-bottom:40px;">@Resource.MenuGoodBuyers</h2>
<div class="row" id="items">
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div class="col-sm-4" align="center">
                <div class="row bordered buyer-item">
                    <div class="col-sm-7 container" style="padding:0;">

                        <img style="width:100%; height:auto;" src="@(item.Lot.ImageSource.Split('.')[0] + "_thumb." + item.Lot.ImageSource.Split('.')[1])" />

                    </div>
                    <div class="col-sm-5" style="text-align:left;">
                        <p class="lot-header-index buyer-item-name">@(item.Lot.Name.Length <= 25 ? item.Lot.Name : item.Lot.Name.Substring(0, 25))<br /></p>
                        <span>Հաղթող</span><br />
                        <span class="good-buyer-label">@item.User.Nickname</span><br />
                        <span>Գումար</span><br />
                        <span class="good-buyer-label">@item.Amount դրամ</span>
                    </div>
                </div>
            </div>
        }
    }
</div>





