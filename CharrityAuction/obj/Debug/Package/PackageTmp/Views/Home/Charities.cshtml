@model List<CharrityAuction.Models.Charity>
@{
    ViewBag.Title = "Charities";
}

<h2 style="color:#0094ff;">@Resource.MenuWhoWeHelp</h2>
<div class="container">
    @foreach (var item in Model)
    {
        <div class="row news-item charity-item">
            <div class="col-sm-6"><span class="charity-label">@Resource.CharityPurpose</span><br />@item.Help</div>
            <div class="col-sm-2"><span class="charity-label">@Resource.CharityMoney</span><br />@item.Money @Resource.AMD</div>
            <div class="col-sm-2"><span class="charity-label">@Resource.LotDate</span><br />@item.OccureDate.ToString("dd.MM.yyyy", System.Globalization.CultureInfo.InvariantCulture)</div>
        </div>
    }
</div>
