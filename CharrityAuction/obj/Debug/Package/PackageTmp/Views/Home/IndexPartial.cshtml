@model List<CharrityAuction.Models.LotModel>

<div class="col-sm-12">
    @{
        var count = 0;
    }
    @foreach (var item in Model)
            {
                if (count % 3 == 0 && count == 0)
                {
            @Html.Raw("<div class=\"row\" id=\"" + count + "\">");
                }

        <div class="col-sm-4">
            @if (this.User.IsInRole("Administrator"))
                {
                <a href="/home/editlot/@item.Id">Edit lot</a>
            }
            <div class="row lot-preview" id="@item.Id" style="font-size:12px; padding:5px; margin-bottom:20px; cursor:pointer;">
                <div class="col-sm-12 container" style="padding:0;">

                    <img style="width:100%; height:auto;" src="@item.ImageSource" />
                    <input type="button" class="btn btn-danger top-right btn-bid" value="Bid" />

                </div>
                <p class="product-header">
                    @(item.Name.Length <= 50 ? item.Name : item.Name.Substring(0, 50))<br />
                    @{
                        var span = item.DeadLine - DateTime.Now;
                    }
                    @if (span.TotalMilliseconds >= 0)
                    {
                        <b>@span.Days @CharrityAuction.Resource.Day @span.Hours @CharrityAuction.Resource.Hours @span.Minutes @CharrityAuction.Resource.Minutes</b><br />
                                    <b>@CharrityAuction.Resource.Value: @item.CurrentBid ֏.</b><br />
                    }
                    else
                    {
                        <b>Տվյալ աճուրդն արդեն ավարտվել է</b>
                    }
                </p>
                <input type="button" class="btn btn-danger btn-bid btn-main" value="@CharrityAuction.Resource.MainDetails" onclick="javascript:: window.location.href='/home/item/@item.Id'" />

            </div>
        </div>
        if (count % 2 == 0 && count != 0)
        {
            @Html.Raw("</div>");
                    count = 0;
                }
                else
                {
                    count++;
                }

            }
</div>




