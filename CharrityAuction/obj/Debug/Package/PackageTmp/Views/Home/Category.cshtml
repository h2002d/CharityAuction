@model List<CharrityAuction.Models.LotModel>
@{
    ViewBag.Title = ViewBag.Category.Name;
}
<div class="row" style="margin-top:30px;">
    <div class="col-sm-3">
        <div class="vertical-menu">
            @foreach (var categories in ViewBag.Categories)
            {
                <a  class="@(categories.Id==ViewBag.Category.Id?"active-menu":"") category-menu" href="/home/category/@categories.Id">@categories.Name</a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <div class="row category-header">
            <div class="col-sm-6 category-header-name" style="color:#0973bf">@ViewBag.Category.Name</div>
            <div class="col-sm-6">
                <select class="form-control" style="float:right;" id="sort-select" onchange="orderBy(@ViewBag.Category.Id)">
                    <option value="1">Closing next</option>
                    <option value="4">Closed</option>
                    <option value="2">Recently added</option>
                    <option value="3">Bid amount(high to low)</option>
                </select>
            </div>
        </div>
        <div class="row" id="items">
           
        </div>

    </div>
    </div>
<script>
    $(document).ready(function () {
        orderBy(@ViewBag.Category.Id)
    });
</script>