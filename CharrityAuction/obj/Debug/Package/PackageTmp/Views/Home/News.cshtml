@model CharrityAuction.Models.NewsModel

@{
    ViewBag.Title = Model.Name;
}


<div class="jumbotron" style="background-color:none!important;">
    <div class="container">
        <h2 class="col-sm-12">@Model.Name</h2>
        <div class="row">
            <div class="col-sm-12">
                <iframe style="width:100%;height:auto;min-height:500px" src="@Model.VideoSource.Replace(".com/watch?v=",".com/embed/")"></iframe>
            </div>
        </div>
        <h4 class="col-sm-12">@Html.Raw(Model.Description)</h4>
        @if (Model.Images.Count != 0)
        {
            <div class="row">
                <div class='col-sm-12 nullBox'></div>
                <div class="category-scroll-content">
                    <div class=" col-sm-1 text-center arrowlft">
                        <span class='arrow-left'><img src="~/images/arrow_left.gif" /></span>
                    </div>
                    <div class='offer-pg-cont col-sm-10'>
                        <div class='offer-pg'>
                            @{ 
                                int indexer = 0;
                            }
                            @foreach (var item in Model.Images)
                            {
                                <a href="#myCarousel" data-slide-to="@indexer">
                                    <div id="@item.Id" alt="image" class="sushiCategory-div  col-sm-3 portfolio-item" align="center">
                                        <img src="@item.ImageSource" class="items myImg" style="width:100%;height:auto;" alt="" />

                                    </div>
                                </a>
                                indexer++;
                            }
                        </div>
                    </div>
                    <div class=" col-sm-1 text-center arrowrgt">
                        <span class='arrow-right'><img src="~/images/arrow_right.gif" /></span>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div id="myModal" class="modal">
    <input type="hidden" id="imageIndex" />
    <span style="z-index:99999999999999;" class="close">&times;</span>
   
    <div id="myCarousel" class="carousel">
        <!-- Indicators -->
        @*<ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            @{
                int i = 1;
                foreach (var image in Model.Images)
                {
                    <li data-target="#myCarousel" data-slide-to="@i"></li>
                    i++;
                }
            }
        </ol>*@

        <!-- Wrapper for slides -->
        <div class="carousel-inner modal-content">
            @{ 
                int index  = 0;
            }
            @foreach (var item in Model.Images)
            {
                <div class="item @(index==0?"active":"")">
                    <img src="@item.ImageSource" style="width:100%;height:auto;">
                </div>
                index++;
            }

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>