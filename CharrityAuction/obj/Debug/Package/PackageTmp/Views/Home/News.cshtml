@model CharrityAuction.Models.NewsModel

@{
    ViewBag.Title = Model.Name;
}


<div class="jumbotron">
    <div class="container">
        <h2 class="col-sm-12">@Model.Name</h2>
        <div class="row">
            <div class="col-sm-12">
                <iframe style="width:100%;height:auto;min-height:500px" src="@Model.VideoSource.Replace(".com/watch?v=",".com/embed/")"></iframe>
            </div>
        </div> 
        <h4 class="col-sm-12">@Html.Raw(Model.Description)</h4>
        
        <div class="row">
            <div class='col-sm-12 nullBox'></div>
            <div class="category-scroll-content">
                <div class=" col-sm-1 text-center arrowlft">
                    <span class='arrow-left'><img src="~/images/arrow_left.gif" /></span>
                </div>
                <div class='offer-pg-cont col-sm-10'>
                    <div class='offer-pg'>
                        @foreach (var item in Model.Images)
                        {
                            <div id="@item.Id" alt="image" class="sushiCategory-div  col-sm-3 portfolio-item" align="center">
                                <img src="@item.ImageSource" class="items myImg" style="width:100%;height:auto;" alt="" />

                            </div>
                        }
                    </div>
                </div>
                <div class=" col-sm-1 text-center arrowrgt">
                    <span class='arrow-right'><img src="~/images/arrow_right.gif" /></span>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="myModal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="img01">
    <div id="caption"></div>
</div>