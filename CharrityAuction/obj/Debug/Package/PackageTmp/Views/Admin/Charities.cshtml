@model List<CharrityAuction.Models.Charity>
@{
    ViewBag.Title = "Charities";
}

<h2>Charities <a href="/Admin/CharityCreate">+</a></h2>
<table id="charities">
    <tr>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Help</td>
            <td>@item.Money</td>
            <td>@item.OccureDate.ToString("dd MM yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
            <td><a href="/Admin/EditCharity/@item.Id">Edit</a></td>
            <td><a onclick="deleteCharit(@item.Id)">Delete</a></td>

        </tr>
    }
</table>
