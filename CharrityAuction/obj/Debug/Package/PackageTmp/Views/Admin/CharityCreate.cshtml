@model CharrityAuction.Models.Charity

@{
    ViewBag.Title = "Create charity";
}

<h2>Create charity</h2>

@using (Html.BeginForm("CharityCreate", "Admin"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.Id)
