@using CharrityAuction.Models
@model LoginViewModel
@{
    ViewBag.Title = Resource.Login;
}

<div class="container" align="center">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal login-form-container ", role = "form" }))
            {
        @Html.AntiForgeryToken()
        <h5 style="text-align:center;">
            <b>@Resource.LoginTitle</b>
            <br />
            <span>
                @Resource.LoginDontHave <a style="float:none !important;color:#0094ff;" href="/account/register">@Resource.LoginRegister</a> @Resource.LoginRegisterAsNewUser
            </span>
        </h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-12">
                <p>@Resource.RegistrationEmail</p>
                @Html.TextBoxFor(m => m.Email, new { @class = " login-partial-input" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                <p>@Resource.RegistrationPassword</p>
                @Html.PasswordFor(m => m.Password, new { @class = " login-partial-input" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox" style="float:right;">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.Label(Resource.RememberMe)
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class=" col-md-12">
                        <input type="submit" value="@Resource.Login" class="btn btn-info btn-lot-bid btn-login-partial" />
                    </div>
                </div>

                 <p>
                        <a  style="float:none !important;color:#0094ff;" href="/Account/ForgotPassword">@Resource.ForgetPassword</a>
                    </p>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>