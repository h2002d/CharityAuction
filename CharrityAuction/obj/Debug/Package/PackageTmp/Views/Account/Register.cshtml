@model CharrityAuction.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container registration-container">
    <div class="registration-header">
        <h3>Register to bid.</h3>
    </div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form-registration", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <hr />
        <div class="row">
            <div class="col-sm-6">
                <label class="registration-input-description">First Name</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                <label class="registration-input-description">Last Name</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">Phone </label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description" style="float:left;">
                    Create nickname
                    <span class="screenname-side-note">Displayed publicly when you bid</span>
                </label>
                @Html.TextBoxFor(m => m.Nickname, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">Email</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">Password</label>
                @Html.PasswordFor(m => m.Password, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">Confirm Password</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <input type="checkbox" id="terms-checkbox" />
                <label> I agree that I have read and accept the terms of the Privacy Policy and the Terms of Use.</label>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" class="registration-btn" value="Register" />
            </div>
            @Html.ValidationSummary("Fill in required fields.", new { @class = "text-danger" })
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
