@model CharrityAuction.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container registration-container">
    <div class="registration-header">
        <h3>@Resource.RegistrationTitle</h3>
    </div>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal form-registration", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <hr />
        <div class="row">
            <div class="col-sm-6">
                <label class="registration-input-description">@Resource.RegistrationName</label>
                @Html.TextBoxFor(m => m.Name, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
            <div class="col-sm-6">
                <label class="registration-input-description">@Resource.RegistrationLastName</label>
                @Html.TextBoxFor(m => m.LastName, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">@Resource.RegistrationPhone</label>
                @Html.TextBoxFor(m => m.Phone, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description" style="float:left;">
                    @Resource.RegistrationNickname
                    <span class="screenname-side-note">@Resource.RegistrationNicknameInfo</span>
                </label>
                @Html.TextBoxFor(m => m.Nickname, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">@Resource.RegistrationEmail</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">@Resource.RegistrationPassword</label>
                @Html.PasswordFor(m => m.Password, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <label class="registration-input-description">@Resource.RegistrationConfirmPassword</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "registration-input" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row registration-row">
            <div class="col-sm-12">
                <input type="checkbox" id="terms-checkbox" />
                <label for="termsAccept">@Html.Raw(Resource.RegistrationPrivacy</label>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="button" class="registration-btn disabled" value="@Resource.Register" />
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
