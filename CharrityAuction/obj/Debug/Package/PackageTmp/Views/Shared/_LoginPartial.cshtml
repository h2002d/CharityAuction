@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            @foreach (var i in CharrityAuction.SiteLanguages.AvailableLanguages)
            {
                <li>@Html.ActionLink(i.LangFullName, "ChangeLanguage", "Home", new { lang = i.LangCultureName }, new { @class = "headerText" }) <text>&nbsp;</text></li>
            }

            <li>
                @Html.ActionLink(CharrityAuction.Resource.Profile, "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right login-menu">
        @foreach (var i in CharrityAuction.SiteLanguages.AvailableLanguages)
        {
            <li>@Html.ActionLink(i.LangFullName, "ChangeLanguage", "Home", new { lang = i.LangCultureName }, new { @class = "headerText login-menu-item" })</li>
        }
        <li>@Html.ActionLink(CharrityAuction.Resource.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink",@class="login-menu-item" })</li>
        <li>@Html.ActionLink(CharrityAuction.Resource.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink",@class="login-menu-item" })</li>
    </ul>
}
