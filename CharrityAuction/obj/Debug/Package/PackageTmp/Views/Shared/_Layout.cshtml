<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <div class="navbar">
        <div class="container non-padding">
            <div class="row">

                <div class="col-sm-4">
                    <div style="position:relative;width:100%; max-width:280px;">
                        <input type="text" id="searchArea" class="form-control" placeholder="@Resource.Search" /><input id="searchButton" type="button">
                    </div>
                </div>
                <div class="col-sm-4 " style="margin-bottom:1px;margin-top:20px;" align="center">
                    <a class="navbar-brand navbar-logo non-float" href="/">
                        <img src='/images/logo.png' class='navbar-image' />
                    </a>
                    <br />
                    <h3 style="color:#fff;">
                        Մասնակցի՛ր, հաղթի՛ր, օգնի՛ր
                    </h3>
                </div>
                <div class="col-sm-4">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>

        </div>
        <div class="menu-header" align="center">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" align="center">
                <ul class="nav navbar-nav main-nav non-float">
                    <li>@Html.ActionLink(CharrityAuction.Resource.Main, "Index", "Home")</li>
                    @if (!this.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink(CharrityAuction.Resource.AboutUs, "About", "Home")</li>
                        <li>@Html.ActionLink(CharrityAuction.Resource.News, "NewsFeed", "Home")</li>
                        <li><a href="/Home/Privacy" id="">@CharrityAuction.Resource.MenuRules</a></li>
                        @*<li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">@CharrityAuction.Resource.MenuMedia</a>

                <ul class="dropdown-menu">

                    <li>
                        <a href="#" id="">@CharrityAuction.Resource.MenuPhoto</a>
                    </li>
                    <li>
                        <a href="#" id="">@CharrityAuction.Resource.MenuVideo</a>
                    </li>

                </ul>
            </li>*@

                        <li class="dropdown">
                            <a href="#" class="dropbtn">@CharrityAuction.Resource.MenuCoWorkers</a>

                            <ul class="dropdown-menu dropdown-content">

                                <li>
                                    <a href="/Home/Partners/0" id="">@CharrityAuction.Resource.MenuStars</a>
                                </li>
                                <li>
                                    <a href="/Home/Partners/1" id="">@CharrityAuction.Resource.MenuCoWorkers</a>
                                </li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropbtn">@CharrityAuction.Resource.MenuReport</a>
                            <ul class="dropdown-menu dropdown-content">

                                <li>
                                    <a href="/Home/Charities" id="">@CharrityAuction.Resource.MenuWhoWeHelp</a>
                                </li>
                                <li>
                                    <a href="/Home/Buyers" id="">@CharrityAuction.Resource.MenuGoodBuyers</a>
                                </li>

                            </ul>
                        </li>
                    }
                    @if (this.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Categories", "Categories", "Admin")</li>
                        <li>@Html.ActionLink("Lots", "Lots", "Admin")</li>
                        <li>@Html.ActionLink("Charities", "Charities", "Admin")</li>
                        <li>@Html.ActionLink("News", "Newsfeed", "Admin")</li>
                        <li>@Html.ActionLink("Co-Workers", "Partners", "Admin")</li>
                        <li>@Html.ActionLink("Payments", "Index", "Payment")</li>

                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

    </div>
    <div class="footer">
        <div style="float:left">
            <p>&copy; goodauction.net @DateTime.Now.Year - Developed by <a class="novir-bar" href="https://web.facebook.com/novirarm/" target="_blank">Novir</a></p>
        </div>
    </div>
    @Scripts.Render("~/bundles/bootstrap")
    @if (this.User.IsInRole("Administrator"))
    {
        <script src="~/Scripts/admin.js"></script>
    }
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/main.js"></script>

</body>
</html>
