@model List<CharrityAuction.Models.CategoryModel>
@{
    ViewBag.Title = "Categories";
}

<h2>Categories<a href="/admin/createcategory">+</a></h2>
<div class="container">
    @foreach (var category in Model)
    {
        <div class="row">
            <div class="col-sm-10">
                <span>@category.Name </span>

            </div>
            <div class="col-sm-2">
                <a href="/Admin/EditCategory/@category.Id">Edit</a>
                <input class="btn btn-info" type="button"value="Delete" onclick="removeCategory(@category.Id)" />
            </div>
        </div>
    }
</div>