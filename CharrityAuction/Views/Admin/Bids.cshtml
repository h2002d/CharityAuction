@model List<CharrityAuction.Models.BidModel>
@{
    ViewBag.Title = "Bids";
}

<h4>Bids</h4>
<div class="container">
    @foreach (var bid in Model)
    {
        <div class="row" style="background-color:@(bid.isWinner?"green":"none")">
            <div class="col-sm-2">
                <span>@bid.User.Name @bid.User.LastName</span>
            </div>
            <div class="col-sm-2">
                <span>@bid.Amount դրամ</span>
            </div>

            <div class="col-sm-2">
                <span>@bid.CreateDate.ToString("dd.MM.yyyy hh:mm")</span>
            </div>
            <div class="col-sm-2">
                <input type="button" value="Հաստատել" class="btn btn-info"onclick="setWinner(@bid.Id)"/> 
            </div>
        </div>
    }
</div>