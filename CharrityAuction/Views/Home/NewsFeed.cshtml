@model List<CharrityAuction.Models.NewsModel>
@{
    ViewBag.Title = "Newsfeed";
}

<h2>Newsfeed <a style="color:black" href="/Admin/CreateNews">+</a></h2>

<div class="container">
    @foreach (var news in Model)
    {
        <div class="row news-item">
            <div class="col-sm-2">
                <span>@news.CreateDate.ToString("dd MM yyyy", System.Globalization.CultureInfo.InvariantCulture)</span>
            </div>
            <div class="col-sm-2">
                <span>@news.Name</span>
            </div>
            <div class="col-sm-8">
                @Html.Raw(news.Description.Length > 300 ? news.Description.Substring(300) : news.Description)
                @if (String.IsNullOrEmpty(news.Link)) {
                <a href="/Home/News/@news.Id">կարդալ ավելին....</a>
                }
                else
                {
                    <a href="@news.Link">կարդալ ավելին....</a>

                }
            </div>
            

        </div>
    }
</div>


