@model List<CharrityAuction.Models.Partner>
@{
    ViewBag.Title = Resource.MenuStars;
}
<h2>@ViewBag.Title</h2>

<div class="col-sm-12">
    @{
        var count = 0;
    }
    @foreach (var item in Model)
            {
                if (count % 4 == 0 && count == 0)
                {
            @Html.Raw("<div class=\"row\" id=\"" + count + "\">");
                }

        <div class="col-sm-3 bordered">
            <div class="row lot-partners-div" id="@item.Id">
                <div class="col-sm-12 container" style="padding:0;">
                    <img style="width:100%; height:auto;" src="@(item.ImageSource.Split('.')[0]+"_thumb."+item.ImageSource.Split('.')[1])" />
                </div>
                <br />
                <div class="col-sm-12" align="center">
                    <p style="color:#808080 ;font-size:12px;">@item.Name</p>
                </div>
               
            </div>
        </div>
        if (count % 3 == 0 && count != 0)
        {
            @Html.Raw("</div>");
                    count = 0;
                }
                else
                {
                    count++;
                }

            }
</div>

