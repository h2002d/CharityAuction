<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(CharrityAuction.Resource.Name, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{
                        foreach (var i in CharrityAuction.SiteLanguages.AvailableLanguages)
                        {
                            <li>@Html.ActionLink(i.LangFullName, "ChangeLanguage", "Home", new { lang = i.LangCultureName }, new { @class = "headerText" }) <text>&nbsp;</text></li>
                        }
                    }
                    @if (this.User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Categories", "Categories", "Admin")</li>
                        <li>@Html.ActionLink("New Category", "CreateCategory", "Admin")</li>

                        <li>@Html.ActionLink("Lots", "Lots", "Admin")</li>
                        <li>@Html.ActionLink("Create Lot", "CreateLot", "Admin")</li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Deveoped by Novir</p>
        </footer>
    </div>
   
    @Scripts.Render("~/bundles/bootstrap")
    @if (this.User.IsInRole("Administrator"))
    {
        <script src="~/Scripts/admin.js"></script>
    }
        @RenderSection("scripts", required: false)
        <script src="~/Scripts/main.js"></script>
</body>
</html>
